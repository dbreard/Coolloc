{% endif %}


<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">Ils recherchent une colocation</h1>
            </div>
        </div>
    </div>
</div>



    {% block fonction %}

        {% include 'required/membre.php' ignore missing  %}

    {% endblock %}

    <body>
        <!-- property area -->
        <div class="properties-area recent-property" style="background-color: #FFF;">
            <div class="container">
                <div class="row  pr0 padding-top-40 properties-page">
                    <div class="col-md-12  clear">

                    <div class="col-md-12 clear ">
                        <div id="list-type" class="proerty-th">

                            {% if affichage is defined %}
                                {% for profil in affichage.membres %}

                                    <div class="col-sm-6 col-md-2 p0">
                                        <div class="box-two proerty-item property-features">
                                            <div class="item-thumb">
                                                <a href="{{ path('fiche-profil') }}" ><img  src="{{ profil.profil_picture }}" alt="Photo de profil de {{ profil.firstname }} {{ profil.lastname }}"></a>
                                            </div>
                                            <div class="item-entry overflow">
                                                <h5><a href="{{ path('fiche-profil') }}" ><ul><li>{{ profil.firstname }}</li><li> {{ profil.lastname }}</li></ul></a></h5>
