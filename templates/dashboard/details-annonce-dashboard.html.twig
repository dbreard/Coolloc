{% extends"dashboard/layout-dashboard.html.twig" %}



{% block headtitle %}
    Gestion Users | CoolLoc, la colocation cool !
{% endblock%}



{% block nav %}
    {# insertion des barre de navigation #}
    {% include 'dashboard/required/nav.html.twig' ignore missing  %}
{% endblock %}


{% block title %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Gestion Utilisateurs
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Dashboard / Gestion annonce / détail de l'annonce {{ detailsAnnonces.id_user_post_annonce }}
                </li>
            </ol>
        </div>
    </div>

{% endblock %}



{% block content %}

    <a href="{{ path ('gerer-annonces-admin') }}" class="btn btn-warning"><i class="fa fa-reply"></i> Retour</a>

    <h2 class="">Détail de l'annonce<small> options de l'annonce :</small> </h2>

    <div class="table-responsive">
        <table class="table table-hover table-striped col-md-12">
            <thead>
            <tr>
                <th class="text-center">Prix du loyer</th>
                <th class="text-center">Surface</th>
                <th class="text-center">Nombre de pièces</th>
                <th class="text-center">Type de maison</th>
                <th class="text-center">Nbr de colocataires</th>
                <th class="text-center">Acces handicapé</th>
                <th class="text-center">Fumeur</th>
                <th class="text-center">Animaux</th>
                <th class="text-center">Composition</th>
                <th class="text-center">Meublé</th>
                <th class="text-center">Jardin</th>
                <th class="text-center">Balcon</th>
                <th class="text-center">Parking</th>
            </tr>
            </thead>
            <tr>
                <td class="text-center">{{ detailsAnnonces.rent }}</td>
                <td class="text-center">{{ detailsAnnonces.surface }}</td>
                <td class="text-center">{{ detailsAnnonces.nb_room }}</td>
                <td class="text-center">{{ detailsAnnonces.housing_type }}</td>
                <td class="text-center">{{ detailsAnnonces.nb_roommates }}</td>
                <td class="text-center">{{ detailsAnnonces.handicap_access }}</td>
                <td class="text-center">{{ detailsAnnonces.smoking }}</td>
                <td class="text-center">{{ detailsAnnonces.animals }}</td>
                <td class="text-center">{{ detailsAnnonces.sex_roommates }}</td>
                <td class="text-center">{{ detailsAnnonces.furniture }}</td>
                <td class="text-center">{{ detailsAnnonces.garden }}</td>
                <td class="text-center">{{ detailsAnnonces.balcony }}</td>
                <td class="text-center">{{ detailsAnnonces.parking }}</td>
            </tr>
        </table>
    </div>

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Description : </h4>
                </div>
                    <div>
                        <p class="text-center">{{ detailsAnnonces.description }}</p>
                    </div>
                </a>
            </div>
        </div>
    </div>


    <h2><small> Choix de l'utilisateur :</small> </h2>

    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover table-striped col-md-12">
                <tr>
                    <th class="col-md-2">Equipement</th>
                    {% if detailsAnnonces.equipment == '' %}
                        <td>Non défini par l'utilisateur</td>
                    {% else %}
                        <td>{{ detailsAnnonces.equipment }}</td>
                    {% endif %}
                </tr>
                <tr>
                    <th>Quartier</th>
                    {% if detailsAnnonces.district == '' %}
                        <td>Non défini par l'utilisateur</td>
                    {% else %}
                        <td>{{ detailsAnnonces.district }}</td>
                    {% endif %}
                </tr>
                <tr>
                    <th>Centres d'interet</th>
                    {% if detailsAnnonces.hobbies == '' %}
                        <td>Non défini par l'utilisateur</td>
                    {% else %}
                        <td>{{ detailsAnnonces.hobbies }}</td>
                    {% endif %}
                </tr>
                <tr>
                    <th>Profil de memebre rechercher</th>
                    {% if detailsAnnonces.member_profil == '' %}
                        <td>Non défini par l'utilisateur</td>
                    {% else %}
                        <td>{{ detailsAnnonces.member_profil }}</td>
                    {% endif %}
                </tr>
            </table>
        </div>
    </div>


    <h2><small> Photos de l'annonce :</small> </h2>
        {% if photoAnnonces != false %}
            <div class="row">

                {% for urlPhoto in photoAnnonces %}
                    <div class="col-lg-2 col-md-4"><img style="margin: 10px auto;" width="200" class="img-responsive img-rounded" src="{{ urlPhoto.url_media }}"></div>
                {% endfor %}

            </div>
            {% else %}
                <p>Aucune photo pour cette annonce</p>
        {% endif %}


    <h2><small> Lien vers les video de l'annonce :</small> </h2>
        {% if videoAnnonces != false %}
            <div class="row">
                {% for urlVideo in videoAnnonces %}
                    <a href="{{ urlVideo }}">{{ urlVideo }}</a>
                {% endfor %}

            </div>
            {% else %}
                <p>Aucune video pour cette annonce</p>
        {% endif %}

{% endblock %}