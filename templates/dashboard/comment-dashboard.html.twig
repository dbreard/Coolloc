{% endblock%}



{% block nav %}
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path ('dashboard') }}">Coolloc Admin</a>
        </div>
        <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>{{ userAdmin.firstname }} {{ userAdmin.lastname }}<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="{{ path('profil') }}"><i class="fa fa-fw fa-user"></i> Profil</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="{{ path('deconnexion') }}"><i class="fa fa-fw fa-power-off"></i> Deconnexion</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav side-nav">
                <li>
                    <a href="{{ path ('dashboard') }}"><i class="fa fa-fw fa-dashboard"></i>Accueil Dashboard</a>
                </li>
                <li>
                    <a href="javascript:;" data-toggle="collapse" data-target="#demo"><i class="fa fa-user"></i> Gerer utilisateurs <i class="fa fa-fw fa-caret-down"></i></a>
                    <ul id="demo" class="collapse">
                        <li>
                            <a href="{{ path ('gerer-user-colocations') }}">Cherchant une colocation</a>
                        </li>
                        <li>
                            <a href="{{ path ('gerer-user-colocataires') }}">Cherchant des colocataires</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="{{ path ('gerer-annonces-admin') }}"><i class="fa fa-fw fa-table"></i> Gestion des annonces</a>
                </li>
                <li>
                    <a href="{{ path ('gerer-faq') }}"><i class="fa fa-fw fa-edit"></i> Gestion de la FAQ</a>
                </li>
                <li class="active">
                    <a href="{{ path ('gerer-temoignage') }}"><i class="fa fa-fw fa-comments-o"></i> Gestion des témoignages</a>
                </li>
                <li>
                    <a href="{{ path ('accueil') }}"><i class="fa fa-home"></i> Retour à la Home</a>
                </li>

            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </nav>
{% endblock %}



{% block title %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Gestion Témoignages
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Dashboard / gestion de témoignages
                </li>
            </ol>
        </div>
    </div>

{% endblock %}



{% block content %}

    <div class="table-responsive">
        <table class="table table-hover table-striped col-md-12">
            <thead>
            <tr>
                <th class="text-center">Id du témoignage</th>
                <th class="text-center">Id utilisateur</th>
                <th class="text-center">Témoignage</th>
                <th class="text-center">Date du post</th>
                <th class="text-center">Supprimer</th>
            </tr>
            </thead>

            <tbody>
            {% if comments is defined %}
                {% for comment in comments %}
                    <tr>
                        <td class="text-center">{{ comment.id_comments }}</td>
                        <td class="text-center">{{ comment.user_id }}</td>
                        <td class="text-center">{{ comment.comment }}</td>
                        <td class="text-center">{{ comment.date_created }}</td>
                        <td class="text-center"><a href="{{ path("supprimer-temoignage", {"id_comments" : comment.id_comments}) }}"><i class="fa fa-trash"></i></a></td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}