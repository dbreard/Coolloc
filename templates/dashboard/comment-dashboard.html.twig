{% extends"dashboard/layout-dashboard.html.twig" %}



{% block headtitle %}
    Dashboard | CoolLoc, la colocation cool !
{% endblock%}



{% block nav %}
    {# insertion des barre de navigation #}
    {% include 'dashboard/required/nav.html.twig' ignore missing  %}
{% endblock %}


{% block title %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Gestion Témoignages
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Dashboard / gestion de témoignages
                </li>
            </ol>
        </div>
    </div>

{% endblock %}



{% block content %}

    <div class="table-responsive">
        <table class="table table-hover table-striped col-md-12">
            <thead>
            <tr>
                <th class="text-center">Id du témoignage</th>
                <th class="text-center">Id utilisateur</th>
                <th class="text-center">Témoignage</th>
                <th class="text-center">Date du post</th>
                <th class="text-center">Supprimer</th>
            </tr>
            </thead>

            <tbody>
            {% if comments is defined %}
                {% for comment in comments %}
                    <tr>
                        <td class="text-center">{{ comment.id_comments }}</td>
                        <td class="text-center">{{ comment.user_id }}</td>
                        <td class="text-center">{{ comment.comment }}</td>
                        <td class="text-center">{{ comment.date_created }}</td>
                        <td class="text-center"><a OnClick='return(confirm("Voulez vous vraiment modifier le status ?"))' href="{{ path("supprimer-temoignage", {"id_comments" : comment.id_comments}) }}"><i class="fa fa-trash"></i></a></td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}