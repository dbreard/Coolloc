                </li>
            </ol>
        </div>
    </div>

{% endblock %}



{% block content %}

    <h2 class="">Personnes recherchant des colocations : </h2>
    <div class="table-responsive">
        <table class="table table-hover table-striped col-md-12">
            <thead>
            <tr>
                <th class="text-center">Prénom</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Date de naissance</th>
                <th class="text-center">Email</th>
                <th class="text-center">Téléphone</th>
                <th class="text-center">Activité</th>
                <th class="text-center">Sexe</th>
                <th class="text-center">Date de création</th>
                <th class="text-center">Statut</th>
                <th class="text-center">Etat du compte</th>
                <th class="text-center">Détails</th>
                <th class="text-center">Supprimer</th>
            </tr>
            </thead>
            {% for users in usersInfo %}
                {% if users.status == 'cherche colocation' %}
                    <tr>
                        <td class="text-center">{{ users.firstname }}</td>
                        <td class="text-center">{{ users.lastname }}</td>
                        <td class="text-center">{{ users.birthdate }}</td>
                        <td class="text-center">{{ users.mail }}</td>
                        <td class="text-center">{{ users.tel }}</td>
                        <td class="text-center">{{ users.activity }}</td>
                        <td class="text-center">{{ users.sex }}</td>
                        <td class="text-center">{{ users.date_created }}</td>
                        <td class="text-center">{{ users.status }}</td>
                        <td class="text-center">{{ users.account }}</td>
                        <td class=""><a href=''><i class="glyphicon glyphicon-search"></i> Détails profil</a></td>
                        <td class="text-center"><a OnClick='return(confirm("Voulez vous vraiment supprimer ?"))' href='' ><i class="glyphicon glyphicon-trash"></a></td>
                    </tr>
                {% endif %}
            {% endfor %}

        </table>
    </div>

    <h2 class="">Personnes recherchant des colocataires : </h2>
    <div class="table-responsive">
        <table class="table table-hover table-striped col-md-12">
            <thead>
            <tr>
                <th class="text-center">Prénom</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Date de naissance</th>
                <th class="text-center">Email</th>
                <th class="text-center">Téléphone</th>
                <th class="text-center">Activité</th>
                <th class="text-center">Sexe</th>
                <th class="text-center">Date de création</th>
                <th class="text-center">Statut</th>
                <th class="text-center">Etat du compte</th>
                <th class="text-center">Détails</th>
                <th class="text-center">Supprimer</th>
            </tr>
            </thead>

            <tbody>
            {% for users in usersInfo %}
                {% if users.status == 'cherche colocataire' %}
                    <tr>
                        <td class="text-center">{{ users.firstname }}</td>
                        <td class="text-center">{{ users.lastname }}</td>
                        <td class="text-center">{{ users.birthdate }}</td>
                        <td class="text-center">{{ users.mail }}</td>
                        <td class="text-center">{{ users.tel }}</td>
                        <td class="text-center">{{ users.activity }}</td>
                        <td class="text-center">{{ users.sex }}</td>
                        <td class="text-center">{{ users.date_created }}</td>
                        <td class="text-center">{{ users.status }}</td>
                        <td class="text-center">{{ users.account }}</td>
                        <td class=""><a href=''><i class="glyphicon glyphicon-search"></i> Détails annonce</a></td>
                        <td class="text-center"><a OnClick='return(confirm("Voulez vous vraiment supprimer ?"))' href='' ><i class="glyphicon glyphicon-trash"></a></td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>


        </table>
    </div>



{% endblock %}