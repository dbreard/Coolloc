{% extends"dashboard/layout-dashboard.html.twig" %}



{% block headtitle %}
    Gestion Users | CoolLoc, la colocation cool !
{% endblock%}



{% block nav %}
    {# insertion des barre de navigation #}
    {% include 'dashboard/required/nav.html.twig' ignore missing  %}
{% endblock %}



{% block title %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Gestion Annonces
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Dashboard / Gestion annonces
                </li>
            </ol>
        </div>
    </div>

{% endblock %}



{% block content %}

    <h2 class="">Nombre d'annonces : {{ annoncesInfo | length }}</h2>
    <div class="table-responsive">
        <table class="table table-hover table-striped col-md-12">
            <thead>
            <tr>
                <th class="text-center">Id annonce</th>
                <th class="text-center">Id utilisateur</th>
                <th class="text-center">Nom de la coloc</th>
                <th class="text-center">Adresse</th>
                <th class="text-center">Details adresse</th>
                <th class="text-center">Code postal</th>
                <th class="text-center">Ville</th>
                <th class="text-center">Mail de la colloc</th>
                <th class="text-center">Tel de la coloc</th>
                <th class="text-center">Date de création</th>
                <th class="text-center">Date de dispo</th>
                <th class="text-center">Détails de l'annonce</th>
                <th class="text-center">Supprimer annonce</th>
            </tr>
            </thead>

            <tbody>
            {% for annonce in annoncesInfo %}
                    <tr>
                        <td class="text-center">{{ annonce.id_user_post_annonce }}</td>
                        <td class="text-center">{{ annonce.user_id }}</td>
                        <td class="text-center">{{ annonce.name_coloc }}</td>
                        <td class="text-center">{{ annonce.adress }}</td>
                        <td class="text-center">{{ annonce.adress_details }}</td>
                        <td class="text-center">{{ annonce.postal_code }}</td>
                        <td class="text-center">{{ annonce.ville_nom_reel }}</td>
                        <td class="text-center">{{ annonce.mail_annonce }}</td>
                        <td class="text-center">{{ annonce.tel_annonce }}</td>
                        <td class="text-center">{{ annonce.date_created }}</td>
                        <td class="text-center">{{ annonce.date_dispo }}</td>
                        <td class="text-center"><a href='{{ path("details-annonce-admin", {"id_annonce" : annonce.id_user_post_annonce}) }}'><i class="glyphicon glyphicon-search"></i> Détails annonce</a></td>
                        <td class="text-center"><a OnClick='return(confirm("Voulez vous vraiment supprimer l\'annonce ?"))' href='' ><i class="glyphicon glyphicon-trash"></a></td>
                    </tr>
            {% endfor %}
            </tbody>


        </table>
    </div>

{% endblock %}