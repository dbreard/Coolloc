{% extends "layout.html.twig" %}

{% block headTitle %}
    Mot de passe oublié | Changer votre mot de passe !
{% endblock %}

{% block header %}
       {% if connected is defined %}
            {% include 'required/header_c.html.twig' ignore missing  %}
                {% else %}
            {% include 'required/header.html.twig' ignore missing  %}
        {% endif %}
{% endblock %}

{# Bloc nav #}

{% block navigation %}

            {% if connected is defined %}
                {% include 'required/navigation_c.html.twig' ignore missing  %}
                    {% else %}
                {% include 'required/navigation_nc.html.twig' ignore missing  %}
            {% endif %}

{% endblock %}

{% block content %}

<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">Mot de passe oublié</h1>

            </div>
        </div>
    </div>
</div>
<!-- End page header -->

<!-- property area -->
<div class="content-area user-profiel" style="background-color: #FCFCFC;">&nbsp;
    <div class="container">

        {% if error is defined %}
            <div class="container">
                <div class="row">
                    <div class="alert alert-danger text-center col-md-6 col-md-offset-3">
                        {% if error.mdp is defined %}
                            {{ error.mdp }}<br>
                        {% endif %}
                        {% if error.format is defined %}
                            {{ error.format }}<br>
                        {% endif %}
                        {% if error.send is defined %}
                            {{ error.send }}<br>
                        {% endif %}
                        {% if error.changePass is defined %}
                            {{ error.changePass }}<br>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 profiel-container">

                <form method="post">

                    <div class="profiel-header">
                        <h3>
                            <b>CHANGER</b> VOTRE MOT DE PASSE <br>
                            <small>Tout changement sera envoyé à votre adresse e-mail.</small>
                        </h3>
                        <hr>
                    </div>

                    <div class="clear">

                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="form-group">
                                <label for="newPass">Nouveau mot de passe <small>(requis)</small></label>
                                <input name="password" type="password" class="form-control" id="newPass">
                            </div>
                            <div class="form-group">
                                <label for="verifNewPass">Confirmez votre nouveau mot de passe <small>(requis)</small></label>
                                <input name="password_repeat" type="password" class="form-control" id="verifNewPass">
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-default"> Changer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- end row -->
    </div>
</div>

{% endblock %}
