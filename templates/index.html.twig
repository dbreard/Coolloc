{% extends"layout.html.twig" %}


{% block headTitle %}
    Accueil | CoolLoc, la colocation cool !
{% endblock %}

{# Bloc nav #}

{% block navigation %}

    {% if connected is defined %}
    {% include 'required/navigation_c.html.twig' ignore missing  %}
        {% else %}
    {% include 'required/navigation_nc.html.twig' ignore missing  %}
    {% endif %}

{% endblock %}

{% block content %}
<div class="slider-area">

    {% block slider %}
        {# insertion des images du slideshow #}
        {% include 'required/slider.html.twig' ignore missing  %}
    {% endblock %}
    

    {# fin de slider #}

    <div class="slider-content">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-12">
                <h2>CoolLoc </h2>
                <p>La façon la plus cool de trouver une colocation qui vous ressemble !</p>
                
                {% block search %}
                    {# insertion du formulaire de recherche #}
                    {% include 'required/search.html.twig' ignore missing  %}
                {% endblock %}

                
            </div>
        </div>
    </div>
</div>

<!-- property area -->
{% block properties %}
    {# Bloc de séléction annonce et profil différent quand user connecter #}
    {% include 'required/properties.html.twig' ignore missing  %}
{% endblock %}


<!--Welcome area -->
<div class="Welcome-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12 Welcome-entry  col-sm-12">
                <div class="col-md-5 col-md-offset-2 col-sm-6 col-xs-12">
                    <div class="welcome_text wow fadeInLeft" data-wow-delay="0.3s" data-wow-offset="100">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1 col-sm-12 text-center page-title">
                                <!-- /.feature title -->
                                <h2>Cool<br> Loc </h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 col-sm-6 col-xs-12">
                    <div  class="welcome_services wow fadeInRight" data-wow-delay="0.3s" data-wow-offset="100">
                        <div class="row">
                            <div class="col-xs-6 m-padding">
                                <div class="welcome-estate">
                                    <div class="welcome-icon">
                                        <i class="pe-7s-home pe-4x"></i>
                                    </div>
                                    <h3>Nos colocations disponibles</h3>
                                </div>
                            </div>
                            <div class="col-xs-6 m-padding">
                                <div class="welcome-estate">
                                    <div class="welcome-icon">
                                        <i class="pe-7s-users pe-4x"></i>
                                    </div>
                                    <h3>Les colocataires <br>en recherche</h3>
                                </div>
                            </div>


                            <div class="col-xs-12 text-center">
                                <i class="welcome-circle"></i>
                            </div>

                            <div class="col-xs-6 m-padding">
                                <div class="welcome-estate">
                                    <div class="welcome-icon">
                                        <i class="pe-7s-info pe-4x"></i>
                                    </div>
                                    <h3>A propos <br> de CoolLoc</h3>
                                </div>
                            </div>
                            <div class="col-xs-6 m-padding">
                                <div class="welcome-estate">
                                    <div class="welcome-icon">
                                        <i class="pe-7s-help2 pe-4x"></i>
                                    </div>
                                    <h3>Les questions <br>fréquentes </h3>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block testimonial %}
    {# Bloc de séléction annonce et profil différent quand user connecter #}
    {% include 'required/testimonials.html.twig' ignore missing  %}
{% endblock %}

{% block countarea %}
    {# Bloc de séléction annonce et profil différent quand user connecter #}
    {% include 'required/countarea.html.twig' ignore missing  %}
{% endblock %}


{% block defineprofil %}
    {# Bloc de séléction annonce et profil différent quand user connecter #}
    {% include 'required/defineprofil.html.twig' ignore missing  %}
{% endblock %}

{% endblock %}
