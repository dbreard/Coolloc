{% extends"layout.html.twig" %}

{% block headTitle %}
    Connection | CoolLoc, la colocation cool !
{% endblock %}

{% block header %}
       {% if connected is defined %}
            {% include 'required/header.html.twig' ignore missing  %}
                {% else %}
            {% include 'required/header_c.html.twig' ignore missing  %}
        {% endif %}
{% endblock %}

{# Bloc nav #}

{% block navigation %}

            {% if connected is defined %}
                {% include 'required/navigation_nc.html.twig' ignore missing  %}
                    {% else %}
                {% include 'required/navigation_c.html.twig' ignore missing  %}
            {% endif %}

{% endblock %}

{% block content %}

        <div class="page-head">
            <div class="container">
                <div class="row">
                    <div class="page-head-content">
                        <h1 class="page-title">Connectez-vous </h1>
                    </div>
                </div>
            </div>
        </div>
        <!-- End page header -->
<!-- register-area -->
        <div class="register-area" style="background-color: rgb(249, 249, 249);">
            <div class="container">

                <div class="col-md-8 col-md-offset-2">
                    <div class="box-for overflow">
                        <div class="col-md-12 col-xs-12 login-blocks">

                            <div class="text-center">
                            <h2>Inscription : </h2>
                            <p>Je ne suis pas encore encore inscrit</p>
                            <div class="text-center">
                            <a href="{{ path('inscription') }}" class="btn btn-default"> M'inscrire</a>
                            </div>
                            <hr>
                            </div>

                            <div class="text-center">
                            <h2 >Connexion : </h2>
                            </div>
                            {% if error is defined %}
                                <div class="alert alert-danger text-center">{{ error }}</div>
                            {% endif %}

                            {% if error.email_error is defined %}
                                    <div class="alert alert-danger text-center">{{ error.email_error }}</div>
                            {% elseif error.password_error is defined %}
                                    <div class="alert alert-danger text-center">{{ error.password_error }}</div>
                            {% endif %}
                            {% if error.failed_connexion is defined %}
                                    <div class="alert alert-danger text-center">{{ error.failed_connexion }}</div>
                            {% endif %}

                            <form action="" method="post">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    {% if error.email is defined %}
                                            <div class="alert alert-danger text-center">{{ error.email }}</div>
                                    {% endif %}
                                    <input type="text" class="form-control" name="mail" id="mail">
                                </div>
                                <div class="form-group">

                                    <label for="password">Mot de passe</label>


                                    {% if error.password is defined %}
                                            <div class="alert alert-danger text-center">{{ error.password }}</div>
                                    {% endif %}

                                    <input type="password" class="form-control" name="password" id="password">
                                    <a href="{{path ('forgotten-password')}}"  >Mot de passe oubli√©</a>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-default"> Me connecter</button>
                                </div>
                            </form>
                            <br>

                            {# <h2>Social login :  </h2>

                            <p>
                            <a class="login-social" href="#"><i class="fa fa-facebook"></i>&nbsp;Facebook</a>
                            <a class="login-social" href="#"><i class="fa fa-google-plus"></i>&nbsp;Gmail</a>
                            <a class="login-social" href="#"><i class="fa fa-twitter"></i>&nbsp;Twitter</a>
                            </p>  #}

                        </div>

                    </div>
                </div>

            </div>
        </div>

{% endblock %}
