{% extends"layout.html.twig" %}


{% block headTitle %}
    Inscription | CoolLoc, la colocation cool !
{% endblock %}

{# Bloc header #}
{% block header %}
    {% if connected is defined %}
            {% include 'required/header_c.html.twig' ignore missing  %}
                {% else %}
            {% include 'required/header.html.twig' ignore missing  %}
        {% endif %}
{% endblock %}

{# Bloc nav #}

{% block navigation %}

            {% if connected is defined %}
                {% include 'required/navigation_c.html.twig' ignore missing  %}
                    {% else %}
                {% include 'required/navigation_nc.html.twig' ignore missing  %}
            {% endif %}

{% endblock %}

{% block content %}

        <div class="page-head">
            <div class="container">
                <div class="row">
                    <div class="page-head-content">
                        <h1 class="page-title">Créer votre compte / Inscrivez-vous </h1>
                    </div>
                </div>
            </div>
        </div>
        <!-- End page header -->
<!-- register-area -->
        <div class="register-area" style="background-color: rgb(249, 249, 249);">
            <div class="container">

                <div class="col-md-12">
                    <div class="box-for overflow">
                        <div class="col-md-12 col-xs-12 register-blocks">
                            <h2 class="col-md-12 text-center">Nouveau compte : </h2>
                            <p class="text-center">Rappel : Les champs précédés d'une <span class="red">*</span> sont obligatoires


                            <form action="" method="post">
                                <div class="row">
                                    <div class="col-md-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="firstname">Prénom *</label>
                                            {% if error.firstname is defined %}
                                                <div class="alert alert-danger text-center">{{ error.firstname }}</div>
                                            {% endif %}
                                        <input type="text" class="form-control" id="firstanme" name="firstname" required value="{% if error.firstname is defined %}{% elseif firstname is defined %}{{ firstname }}{% endif %}">
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Nom *</label>
                                        {% if error.lastname is defined %}
                                            <div class="alert alert-danger text-center">{{ error.lastname }}</div>
                                        {% endif %}
                                      <input type="text" class="form-control" id="lastname" name="lastname" required value="{% if error.lastname is defined %}{% elseif lastname is defined %}{{ lastname }}{% endif %}">
                                    </div>
                                    <div class="form-group">
                                        <label for="birthdate">Date de naissance *</label>
                                        {% if error.younger is defined %}
                                            <div class="alert alert-danger text-center">{{ error.younger }}</div>
                                        {% endif %}
                                      <input type="date" class="form-control" id="birthdate" name="birthdate" required value="{% if error.younger is defined %}{% elseif birthdate is defined %}{{ birthdate }}{% endif %}">
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Mot de passe *</label>
                                        {% if error.password is defined %}
                                            <div class="alert alert-danger text-center">{{ error.password }}</div>
                                        {% elseif error.password_correspondance is defined %}
                                            <div class="alert alert-danger text-center">{{ error.password_correspondance }}</div>
                                        {% endif %}
                                      <input type="password" class="form-control" id="password" name="password" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="password_repeat">Répetez mot de passe *</label>
                                        {% if error.password_correspondance is defined %}
                                            <div class="alert alert-danger text-center">{{ error.password_correspondance }}</div>
                                        {% endif %}
                                        <input type="password" class="form-control" id="password_repeat" name="password_repeat" required>
                                    </div>

                                </div>
                {# "firstname","lastname","birthdate","password","repeat_password", "mail","tel","activity","sex","status","conditions" #}
                {# status cherche colocation ou cherche colocataire #}


                                <div class="col-md-6 col-xs-12">

                                    <div class="form-group">
                                        <label for="mail">Email *</label>
                                        {% if error.invalid_email is defined %}
                                            <div class="alert alert-danger text-center">{{ error.invalid_email }}</div>
                                        {% elseif error.email_already_exist is defined %}
                                            <div class="alert alert-danger text-center">{{ error.email_already_exist }}</div>
                                        {% endif %}
                                      <input type="email" class="form-control" id="mail" name="mail" placeholder="de la forme votre-nom@nom.fr" required value="{% if error.email is defined %}{% elseif error.email_already_exist is defined %}{% elseif email is defined %}{{ email }}{% endif %}" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="tel">Tél. *</label>
                                        {% if error.incorrect_phone is defined %}
                                            <div class="alert alert-danger text-center">{{ error.incorrect_phone }}</div>
                                        {% endif %}
                                      <input type="text" class="form-control" id="mail" name="tel" required value="{% if error.incorrect_phone is defined %}{% elseif tel is defined %}{{ tel }}{% endif %}">
                                    </div>
                                    <div class="form-group">

						                <div class="coloc_title">Vous êtes : *</div>
                            {% if error.sex_error is defined %}
                                <div class="alert alert-danger text-center">{{ error.sex_error }}</div>
                            {% endif %}
                                        <label class="coloc_button coloc_genre0 c_femme first" for="c_femme_0" id="sexe">
                                        <input class="sex-radio" name="sex" value="femme" id="c_femme_0" type="radio" required>
                                        <span></span>Une femme</label>
                                        <label class="coloc_button coloc_genre0 c_homme" for="c_homme_0" id="sexe">
                                        <input class="sex-radio" name="sex" value="homme" id="c_homme_0" type="radio"><img src="" alt="" />
                                        <span></span>Un homme</label>
                                        <div class="clear"></div>

		                            </div>

                                    <label for="password">Activité *</label>
                                    {% if error.activity_error is defined %}
                                        <div class="alert alert-danger text-center">{{ error.activity_error }}</div>
                                    {% endif %}
                                    <select class="form-control" name="activity">
                                        <option value="activité pro">salarié</option>
                                        <option value="retraité">retraité</option>
                                        <option value="sans activité">sans-emploi</option>
                                        <option value="étudiant">étudiant</option>
                                    </select>

                                    <input type="hidden" name="status" value="inactif">
                                    <br>

                                    <div class="form-group">
                                        <label for="condtitions">Accepter les conditions d'utilisation* </label>
                                        {% if error.no_condition is defined %}
                                            <div class="alert alert-danger text-center">{{ error.no_condition }}</div>
                                        {% endif %}
                                        <input type="checkbox" class="form-control" id="conditions" name="conditions" value="1" required>
                                    </div>
                                    {# ajout de la photo #}
                                    {# par défaut user est inactif tant que le compte n'est pas vérifié par le token d'inscription #}
                                </div>
                                </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-default">S'inscrire</button>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

{% endblock %}
