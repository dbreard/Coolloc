{% extends"layout-class-nojs.html.twig" %}



{% block headTitle %}
    Ajouter une colocation | CoolLoc, la colocation cool !
{% endblock %}

{% block header %}
       {% if connected is defined %}
            {% include 'required/header_c.html.twig' ignore missing  %}
                {% else %}
            {% include 'required/header.html.twig' ignore missing  %}
        {% endif %}
{% endblock %}

{# Bloc nav #}

{% block navigation %}

            {% if connected is defined %}
                {% include 'required/navigation_c.html.twig' ignore missing  %}
                    {% else %}
                {% include 'required/navigation_nc.html.twig' ignore missing  %}
            {% endif %}

{% endblock %}

{% block content %}

<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
          <h1 class="page-title">Bonjour : <span class="orange strong">{% if profilInfo.firstname is defined %}{{ profilInfo.firstname }}{% else %}{% endif %}</span></h1>
            </div>
        </div>
    </div>
</div>
<!-- End page header -->

<!-- property area -->
<div class="content-area user-profiel" style="background-color: #FCFCFC;">&nbsp;
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 profiel-container">

                <form action="" method="">
                    <div class="profiel-header">
                        <h3>
                            <b>MODIFIER</b> VOTRE PROFIL <br>
                        </h3>
                        <hr>
                    </div>

                    <div class="clear">
                        <div class="col-sm-3 col-sm-offset-1">
                            <div class="picture-container">
                                <div class="picture">
                                    <img src="assets/img/avatar.png" class="picture-src" id="wizardPicturePreview" title=""/>
                                    <input type="file" id="wizard-picture">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-3 padding-top-25">

                            <div class="form-group">
                                <label>Prénom</label>
                              <input name="firstname" type="text" class="form-control" placeholder="Andrew..." value="{% if profilInfo.firstname is defined %}{{ profilInfo.firstname }}{% endif %}">
                            </div>
                            <div class="form-group">
                                <label>Nom</label>
                              <input name="lastname" type="text" class="form-control" placeholder="Smith..." value="{% if profilInfo.lastname is defined %}{{ profilInfo.lastname }}{% endif %}">
                            </div>
                            <div class="form-group">
                                <label>Adresse Email</label>
                              <input name="email" type="email" class="form-control" placeholder="andrew@email@email.com.com" value="{% if profilInfo.mail is defined %}{{ profilInfo.mail }}{% endif %}">
                            </div>
                            <div class="form-group">
                                <label>Sexe</label>
                                <select class="form-control" name="sex">
                                  {% if profilInfo.sex is defined %}
                                    {% if profilInfo.sex == "homme" %}
                                      <option value="homme" selected>Homme</option>
                                      <option value="femme">Femme</option>
                                    {% elseif profilInfo.sex == "femme" %}
                                      <option value="homme">Homme</option>
                                      <option value="femme" selected>Femme</option>
                                    {% endif %}
                                  {% else %}
                                    <option value="homme">Homme</option>
                                    <option value="femme">Femme</option>
                                  {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3 padding-top-25">

                            <div class="form-group">
                                <label>N° de téléphone</label>
                              <input name="firstname" type="text" class="form-control" placeholder="Andrew..." value="{% if profilInfo.tel is defined %}{{ profilInfo.tel }}{% endif %}">
                            </div>
                            <div class="form-group">
                                <label>Statut</label>
                                <select class="form-control" name="status">
                                  {% if profilInfo.status is defined %}
                                    {% if profilInfo.status == "cherche colocation" %}
                                      <option value="cherche colocation" selected>Cherche colocation</option>
                                      <option value="cherche colocataire">Cherche colocataire</option>
                                    {% elseif profilInfo.status == "cherche colocataire" %}
                                      <option value="cherche colocation">Cherche colocation</option>
                                      <option value="cherche colocataire" selected>Cherche colocataire</option>
                                    {% elseif profilInfo.status == "admin" %}
                                      <option value="admin" selected>Admin</option>
                                    {% endif %}
                                  {% else %}
                                    <option value="cherche colocation">Cherche colocation</option>
                                    <option value="cherche colocataire">Cherche colocataire</option>
                                  {% endif %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Activité</label>
                                <select class="form-control" name="activity">
                                  {% if profilInfo.activity is defined %}
                                    {% if profilInfo.activity == "activité pro" %}
                                      <option value="activité pro" selected>salarié</option>
                                      <option value="retraité">retraité</option>
                                      <option value="sans activité">sans-emploi</option>
                                      <option value="étudiant">étudiant</option>
                                    {% elseif profilInfo.activity == "retraité" %}
                                      <option value="activité pro">salarié</option>
                                      <option value="retraité" selected>retraité</option>
                                      <option value="sans activité">sans-emploi</option>
                                      <option value="étudiant">étudiant</option>
                                    {% elseif profilInfo.activity == "sans activité" %}
                                      <option value="activité pro">salarié</option>
                                      <option value="retraité">retraité</option>
                                      <option value="sans activité" selected>sans-emploi</option>
                                      <option value="étudiant">étudiant</option>
                                    {% elseif profilInfo.activity == "étudiant" %}
                                      <option value="activité pro">salarié</option>
                                      <option value="retraité">retraité</option>
                                      <option value="sans activité">sans-emploi</option>
                                      <option value="étudiant" selected>étudiant</option>
                                    {% endif %}
                                  {% else %}
                                    <option value="activité pro">salarié</option>
                                    <option value="retraité">retraité</option>
                                    <option value="sans activité">sans-emploi</option>
                                    <option value="étudiant">étudiant</option>
                                  {% endif %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="birthdate">Date de naissance</label>
                              <input type="date" class="form-control" id="birthdate" name="birthdate" required value="{% if profilInfo.birthdate is defined %}{{ profilInfo.birthdate }}{% endif %}">
                            </div>
                        </div>
                    </div>

                    <div class="clear">
                        <br>
                        <hr>
                        <br>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <label>Public email :</label>
                                <input name="p-email" type="email" class="form-control" placeholder="p-email@rmail.com">
                            </div>
                            <div class="form-group">
                                <label>Phone :</label>
                                <input name="Phone" type="text" class="form-control" placeholder="+1 9090909090">
                            </div>
                            <div class="form-group">
                                <label>FAX :</label>
                                <input name="FAX" type="text" class="form-control" placeholder="+1 9090909090">
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-5 col-sm-offset-1">
                        <br>
                        <input type='button' class='btn btn-finish btn-primary' name='finish' value='Finish' />
                    </div>
                    <br>
            </form>

        </div>
    </div><!-- end row -->

</div>
</div>

{% endblock %}
