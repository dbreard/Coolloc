
{% extends"layout.html.twig" %}


{% block headTitle %}
    Mot de passe oublié | Changer votre mot de passe !
{% endblock %}

{% block header %}
       {% if connected is defined %}
            {% include 'required/header_c.html.twig' ignore missing  %}
                {% else %}
            {% include 'required/header.html.twig' ignore missing  %}
        {% endif %}
{% endblock %}

{# Bloc nav #}

{% block navigation %}

            {% if connected is defined %}
                {% include 'required/navigation_c.html.twig' ignore missing  %}
                    {% else %}
                {% include 'required/navigation_nc.html.twig' ignore missing  %}
            {% endif %}

{% endblock %}

{% block content %}



<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">Changer de mot de Passe</h1>

            </div>
        </div>
    </div>
</div>
<!-- End page header -->

<!-- property area -->
<div class="content-area user-profiel" style="background-color: #FCFCFC;">&nbsp;
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 profiel-container">

                <form method="post">

                    <div class="profiel-header">
                        <h3>
                            <b>CHANGER</b> VOTRE MOT DE PASSE <br>
                            <small>Tout changement sera envoyé à votre adresse e-mail.</small>
                        </h3>
                        <hr>
                    </div>

                    <div class="clear">

                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="form-group">
                            {% if error.old_password is defined %}
                              <div class="alert alert-danger text-center">{{ error.old_password }}</div>
                            {% endif %}
                              <label>Ancien Mot de Passe <small>(requis)</small></label>
                              <input name="old_password" type="password" class="form-control">
                            </div>
                            <div class="form-group">
                            {% if error.mdp is defined %}
                              <div class="alert alert-danger text-center">{{ error.mdp }}</div>
                            {% endif %}
                            {% if error.format is defined %}
                              <div class="alert alert-danger text-center">{{ error.format }}</div>
                            {% endif %}
                                <label>Nouveau mot de passe <small>(requis)</small></label>
                                <input name="password" type="password" class="form-control">
                            </div>
                            <div class="form-group">
                            {% if error.mdp is defined %}
                              <div class="alert alert-danger text-center">{{ error.mdp }}</div>
                            {% endif %}
                                <label>Confirmez votre nouveau mot de passe : <small>(requis)</small></label>
                                <input name="password_repeat" type="password" class="form-control">
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="col-xs-6 col-xs-offset-3 btn btn-default" value="Changer"/>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- end row -->
    </div>
</div>

{% endblock %}
