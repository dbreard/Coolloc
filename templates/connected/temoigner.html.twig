{% extends"layout.html.twig" %}


{% block headTitle %}
    Témoigner | CoolLoc, la colocation cool !
{% endblock %}

{# Bloc header #}
{% block header %}
    {% if connected is defined %}
            {% include 'required/header_c.html.twig' ignore missing  %}
                {% else %}
            {% include 'required/header.html.twig' ignore missing  %}
        {% endif %}
{% endblock %}

{# Bloc nav #}

{% block navigation %}

            {% if connected is defined %}
                {% include 'required/navigation_c.html.twig' ignore missing  %}
                    {% else %}
                {% include 'required/navigation_nc.html.twig' ignore missing  %}
            {% endif %}

{% endblock %}

{% block content %}
    <div class="slider-area">
    


        <div class="page-head"> 
            <div class="container">
                <div class="row">
                    <div class="page-head-content">
                        <h1 class="page-title">Témoignage</h1>               
                    </div>
                </div>
            </div>
        </div>
        <!-- End page header --> 

        <!-- property area -->
        <div class="content-area user-profiel" style="background-color: #FCFCFC;">&nbsp;
            <div class="container">   
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1 profiel-container">

                        

                            <div class="profiel-header">
                                <h3>
                                    Laisser un <b>commentaire</b>
                                </h3>
                                {% if error is defined %}
                                    {% for errors in error %}
                                        <div class="alert alert-danger text-center">{{ errors }}</div>
                                    {%  endfor %}
                                {% endif %}
                                <hr>
                            </div>

                            <div class="clear">
                                <div class="col-sm-10 col-sm-offset-1">
                                    <form method="post" action="">    
                                            <div class="form-group">
                                                <label>Votre message doit avoir une taille comprise entre 5 et 100 caractères <small>(requis)</small>
                                                <br>Ce message ne doit contenir ni commentaire de type raciste, sexiste ou injurieux, nous nous réservons le droit de le supprimer avant parution</label>
                                                <input name="comment" type="text" class="form-control" required>
                                            </div>
                                            <input type="hidden" name="user_id" value="{% if profilInfo.id is defined %}{{profilInfo.id}}{% else %}Youloose{% endif %}"/>
                                            
                                            
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-default"> Envoyer</button>
                                            </div>       
                                    </form>
                                </div>
                            </div>
                    </div>
                </div><!-- end row -->
            </div>
    </div>                  


{% endblock %}
    