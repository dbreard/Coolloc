                                                    {% else %}
                                                        <option value="non">Non</option>
                                                    {% endif %}

                                                    {% if info_annonce.smoking == 'peu importe' %}
                                                        <option value="peu importe" selected>Peu importe</option>
                                                    {% else %}
                                                        <option value="peu importe">Peu importe</option>
                                                    {% endif %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.animals is defined %}
                                                        <span class="red">{{ error.animals }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Animaux :</label>
                                                <select id="animals" name="animals" class="selectpicker" data-live-search="true" data-live-search-style="begins" title="Choix">
                                                    {% if info_annonce.animals == 'oui' %}
                                                        <option value="oui" selected>Oui</option>
                                                    {% else %}
                                                        <option value="oui">Oui</option>
                                                    {% endif %}

                                                    {% if info_annonce.animals == 'non' %}
                                                        <option value="non" selected>Non</option>
                                                    {% else %}
                                                        <option value="non">Non</option>
                                                    {% endif %}

                                                    {% if info_annonce.animals == 'peu importe' %}
