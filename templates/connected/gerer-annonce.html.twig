{% extends"layout-class-nojs.html.twig" %}

{% block headTitle %}
    Ajouter une colocation | CoolLoc, la colocation cool !
{% endblock %}

{% block header %}
    {% if connected is defined %}
        {% include 'required/header_c.html.twig' ignore missing  %}
            {% else %}
        {% include 'required/header.html.twig' ignore missing  %}
    {% endif %}
{% endblock %}

{# Bloc nav #}

{% block navigation %}
    {% if connected is defined %}
        {% include 'required/navigation_c.html.twig' ignore missing  %}
    {% else %}
        {% include 'required/navigation_nc.html.twig' ignore missing  %}
    {% endif %}
{% endblock %}

{% block content %}
<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">Modifier votre annonce</h1>
            </div>
        </div>
    </div>
</div>
<!-- End page header -->

<!-- property area -->
<div class="content-area submit-property" style="background-color: #FCFCFC;">&nbsp;
    <div class="container">
        <div class="clearfix" >
            <div class="wizard-container">

                <div class="wizard-card ct-wizard-orange" id="wizardProperty">
                    <form action="" method="POST" enctype="multipart/form-data">
                        <div class="wizard-header">
                            <h3>
                                <b>MODIFIER</b> VOTRE ANNONCE<br>
                                <small>Insèrez toutes les informations pour trouver des colocataires.</small>
                            </h3>
                        </div>

                        <ul>
                            <li><a href="#step1" data-toggle="tab">Étape 1</a></li>
                            <li><a href="#step2" data-toggle="tab">Étape 2</a></li>
                            <li><a href="#step3" data-toggle="tab">Terminé</a></li>
                        </ul>

                        <div class="tab-content">

                            <div class="tab-pane" id="step1">
                                <div class="row p-b-15  ">
                                    <h4 class="info-text">Commençons par les informations de base</h4>
                                    <div class="col-sm-4 col-sm-offset-1">
                                        <div>
                                            {% if error.photo1 is defined %}
                                                <span class="red">{{ error.photo1 }}</span>
                                            {% endif %}
                                            {% if error.photo is defined %}
                                                <span class="red">{{ error.photo }}</span>
                                            {% endif %}
                                        </div>
                                        <div class="picture-container">
                                            <div class="picture">
                                                {% if array_photo.photo1 is defined %}
                                                    <img src="{{ array_photo.photo1.url_media }}" class="picture-src" id="wizardPicturePreview1" title=""/>
                                                {% else %}
                                                    <img src="{{ asset('assets/img/default-property.jpg') }}" class="picture-src" id="wizardPicturePreview1" title=""/>
                                                {% endif %}

                                                <input type="file" id="wizard-picture1" name="photo1">
                                            </div>

                                        </div>

                                        <div class="col-sm-12">
                                            <div class="col-sm-3">
                                                <div class="picture">
                                                {% if array_photo.photo2 is defined %}
                                                    <img src="{{ array_photo.photo2.url_media }}" class="picture-src" id="wizardPicturePreview2" title=""/>
                                                {% else %}
                                                    <img src="{{ asset('assets/img/default-property.jpg') }}" class="picture-src" id="wizardPicturePreview2" title=""/>
                                                {% endif %}

                                                <input type="file" id="wizard-picture2" name="photo2">
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="picture">
                                                {% if array_photo.photo3 is defined %}
                                                    <img src="{{ array_photo.photo3.url_media }}" class="picture-src" id="wizardPicturePreview3" title=""/>
                                                {% else %}
                                                    <img src="{{ asset('assets/img/default-property.jpg') }}" class="picture-src" id="wizardPicturePreview3" title=""/>
                                                {% endif %}

                                                <input type="file" id="wizard-picture3" name="photo3">
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="picture">
                                                {% if array_photo.photo4 is defined %}
                                                    <img src="{{ array_photo.photo4.url_media }}" class="picture-src" id="wizardPicturePreview4" title=""/>
                                                {% else %}
                                                    <img src="{{ asset('assets/img/default-property.jpg') }}" class="picture-src" id="wizardPicturePreview4" title=""/>
                                                {% endif %}

                                                <input type="file" id="wizard-picture4" name="photo4">
                                                </div>
                                            </div>

                                            <div class="col-sm-3">
                                                <div class="picture">
                                                {% if array_photo.photo5 is defined %}
                                                    <img src="{{ array_photo.photo5.url_media }}" class="picture-src" id="wizardPicturePreview5" title=""/>
                                                {% else %}
                                                    <img src="{{ asset('assets/img/default-property.jpg') }}" class="picture-src" id="wizardPicturePreview5" title=""/>
                                                {% endif %}

                                                <input type="file" id="wizard-picture5" name="photo5">
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div>
                                                {% if error.name_coloc is defined %}
                                                    <span class="red">{{ error.name_coloc }}</span>
                                                {% endif %}
                                                {% if name_coloc|default() %}
                                                    <span class="red">{{ name_coloc }}</span>
                                                {% endif %}
                                            </div>
                                            <label>Nom de la colocation <span class="red">*</span></label>
                                        <input name="name_coloc" type="text" class="form-control" placeholder="Super villa ..." value="{% if value.name_coloc is defined %}{{ value.name_coloc }}{% else %}{{ info_annonce.name_coloc }}{% endif %}">
                                        </div>
                                        <div class="form-group">
                                            <div>
                                                {% if error.rent is defined %}
                                                    <span class="red">{{ error.rent }}</span>
                                                {% endif %}
                                                {% if rent|default() %}
                                                    <span class="red">{{ rent }}</span>
                                                {% endif %}
                                            </div>
                                            <label>Loyer (€) <span class="red">*</span></label>
                                        <input name="rent" type="number" class="form-control" placeholder="3330000" value="{% if value.rent is defined %}{{ value.rent }}{% else %}{{ info_annonce.rent }}{% endif %}">
                                        </div>
                                        <div class="form-group">
                                            <div>
                                                {% if error.tel_annonce is defined %}
                                                    <span class="red">{{ error.tel_annonce }}</span>
                                                {% endif %}
                                            </div>
                                            <label>Téléphone <small>(vide si vous voulez utiliser le même que sur votre profil)</small></label>
                                        <input name="tel_annonce" type="text" class="form-control" placeholder="+33 6 47 84 74 36" value="{% if value.tel_annonce is defined %}{{ value.tel_annonce }}{% else %}{{ info_annonce.tel_annonce }}{% endif %}">
                                        </div>
                                        <div class="form-group">
                                            <div>
                                                {% if error.mail_annonce is defined %}
                                                    <span class="red">{{ error.mail_annonce }}</span>
                                                {% endif %}
                                            </div>
                                            <label>Mail de contact <small>(vide si vous voulez utiliser le même que sur votre profil)</small></label>
                                            <input name="mail_annonce" type="mail" class="form-control" placeholder="contact@mail.com" value="{% if value.mail_annonce is defined %}{{ value.mail_annonce }}{% else %}{{ info_annonce.mail_annonce }}{% endif %}">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <h4>Média vidéo</h4>
                                        <div class="form-group">
                                            <div>
                                                {% if error.video is defined %}
                                                    <span class="red">{{ error.video }}</span>
                                                {% endif %}
                                            </div>
                                            <label for="videos">Insérez un lien vers la vidéo youtube de votre colocation :</label>
                                        <input class="form-control" placeholder="http://www.youtube.com" name="video" type="text" value="{% if value.video is defined %}{{ value.video }}{% elseif info_video.url_media is defined %}{{ info_video.url_media }}{% endif %}">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--  End step 1 -->

                            <div class="tab-pane" id="step2">
                                <h4 class="info-text"> Décrivez votre colocation </h4>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.description is defined %}
                                                        <span class="red">{{ error.description }}</span>
                                                    {% endif %}
                                                    {% if description|default() %}
                                                        <span class="red">{{ description }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Description : <span class="red">*</span></label>
                                            <textarea name="description" class="form-control textarea-annonce" >{% if value.description is defined %}{{ value.description }}{% else %}{{ info_annonce.description }}{% endif %}</textarea>
                                            </div>

                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div>
                                                    {% if cityError is defined %}
                                                        <span class="red">{{ cityError }}</span>
                                                    {% endif %}
                                                    {% if error.postal_code is defined %}
                                                        <span class="red">{{ error.postal_code }}</span>
                                                    {% endif %}
                                                    {% if error.adress is defined %}
                                                        <span class="red">{{ error.adress }}</span>
                                                    {% endif %}
                                                    {% if error.adress_details is defined %}
                                                        <span class="red">{{ error.adress_details }}</span>
                                                    {% endif %}
                                                    {% if ville|default() %}
                                                        <span class="red">{{ ville }}</span>
                                                    {% endif %}
                                                    {% if postal_code|default() %}
                                                        <span class="red">{{ postal_code }}</span>
                                                    {% endif %}
                                                    {% if adress|default() %}
                                                        <span class="red">{{ adress }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Adresse : <span class="red">*</span></label>
                                            <input name="ville" type="text" class="form-control adresse" placeholder="Ville *" value="{% if value.ville is defined %}{{ value.ville }}{% else %}{{ info_annonce.ville_nom_reel }}{% endif %}">
                                            <input name="postal_code" type="number" class="form-control adresse" placeholder="Code postal *" value="{% if value.postal_code is defined %}{{ value.postal_code }}{% else %}{{ info_annonce.postal_code }}{% endif %}">
                                                <input name="adress" type="text" class="form-control adresse" placeholder="Adresse *" value="{% if value.adress is defined %}{{ value.adress }}{% else %}{{ info_annonce.adress }}{% endif %}">
                                            <input name="adress_details" type="text" class="form-control adresse" placeholder="Complément d'adresse" value="{% if value.adress_details is defined %}{{ value.adress_details }}{% else %}{{ info_annonce.adress_details }}{% endif %}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 padding-top-15">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.housing_type is defined %}
                                                        <span class="red">{{ error.housing_type }}</span>
                                                    {% endif %}
                                                    {% if housing_type|default() %}
                                                        <span class="red">{{ housing_type }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Type de bien immobilier : <span class="red">*</span></label>
                                                <select id="housing_type" name="housing_type" class="selectpicker" data-live-search="true" data-live-search-style="begins" title="Selectionner">
                                                    {% if info_annonce.housing_type == 'maison' %}
                                                        <option value="maison" selected>Maison</option>
                                                    {% else %}
                                                        <option value="maison">Maison</option>
                                                    {% endif %}

                                                    {% if info_annonce.housing_type == 'appartement' %}
                                                        <option value="appartement" selected>Appartement</option>
                                                    {% else %}
                                                        <option value="appartement">Appartement</option>
                                                    {% endif %}

                                                    {% if info_annonce.housing_type == 'loft' %}
                                                        <option value="loft" selected>Loft</option>
                                                    {% else %}
                                                        <option value="loft">Loft</option>
                                                    {% endif %}

                                                    {% if info_annonce.housing_type == 'hotel particulier' %}
                                                        <option value="hotel particulier" selected>Hôtel particulier</option>
                                                    {% else %}
                                                        <option value="hotel particulier">Hôtel particulier</option>
                                                    {% endif %}

                                                    {% if info_annonce.housing_type == 'corps de ferme' %}
                                                        <option value="corps de ferme" selected>Corps de ferme</option>
                                                    {% else %}
                                                        <option value="corps de ferme">Corps de ferme</option>
                                                    {% endif %}

                                                    {% if info_annonce.housing_type == 'autre' %}
                                                        <option value="autre" selected>Autre</option>
                                                    {% else %}
                                                        <option value="autre">Autre</option>
                                                    {% endif %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.surface is defined %}
                                                        <span class="red">{{ error.surface }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Surface générale (m²):</label>
                                            <input name="surface" type="number" class="form-control" placeholder="Surface moyenne *" value="{% if value.surface is defined %}{{ value.surface }}{% else %}{{ info_annonce.surface }}{% endif %}">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.nb_room is defined %}
                                                        <span class="red">{{ error.nb_room }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Nombre de pièces :</label>
                                                <input name="nb_room" type="number" class="form-control" placeholder="3 *" value="{% if value.nb_room is defined %}{{ value.nb_room }}{% else %}{{ info_annonce.nb_room }}{% endif %}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.date_dispo is defined %}
                                                        <span class="red">{{ error.date_dispo }}</span>
                                                    {% endif %}
                                                    {% if date_dispo|default() %}
                                                        <span class="red">{{ date_dispo }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Date de disponibilité : <span class="red">*</span></label>
                                            <input name="date_dispo" type="date" class="form-control" placeholder="" value="{% if value.date_dispo is defined %}{{ value.date_dispo }}{% else %}{{ info_annonce.date_dispo }}{% endif %}">
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.nb_roommates is defined %}
                                                        <span class="red">{{ error.nb_roommates }}</span>
                                                    {% endif %}
                                                    {% if nb_roommates|default() %}
                                                        <span class="red">{{ nb_roommates }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Nombre de colocataires : <span class="red">*</span></label>
                                                <input name="nb_roommates" type="number" class="form-control" placeholder="3 *" value="{% if value.nb_roommates is defined %}{{ value.nb_roommates }}{% else %}{{ info_annonce.nb_roommates }}{% endif %}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 padding-top-15">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.handicap_access is defined %}
                                                        <span class="red">{{ error.handicap_access }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Accès handicapé :</label>
                                                <select id="handicap_access" name="handicap_access" class="selectpicker" data-live-search="true" data-live-search-style="begins" title="Choix">
                                                    {% if info_annonce.handicap_access == 'oui' %}
