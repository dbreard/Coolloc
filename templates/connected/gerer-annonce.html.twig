                                                    {% else %}
                                                        <option value="peu importe">Peu importe</option>
                                                    {% endif %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.sex_roommates is defined %}
                                                        <span class="red">{{ error.sex_roommates }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Sexe :</label>
                                                <select id="sex_roommates" name="sex_roommates" class="selectpicker" data-live-search="true" data-live-search-style="begins" title="Choix">
                                                    {% if info_annonce.sex_roommates == 'homme' %}
