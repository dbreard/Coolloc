                                                    {% else %}
                                                        <option value="non">Non</option>
                                                    {% endif %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.smoking is defined %}
                                                        <span class="red">{{ error.smoking }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Fumeur :</label>
                                                <select id="smoking" name="smoking" class="selectpicker" data-live-search="true" data-live-search-style="begins" title="Choix">
                                                    {% if info_annonce.smoking == 'oui' %}
