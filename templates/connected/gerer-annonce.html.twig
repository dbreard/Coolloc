                                                    {% else %}
                                                        <option value="peu importe">Peu importe</option>
                                                    {% endif %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.furniture is defined %}
                                                        <span class="red">{{ error.furniture }}</span>
                                                    {% endif %}
                                                </div>
                                                <label>Meublé :</label>
                                                <select id="furniture" name="furniture" class="selectpicker" data-live-search="true" data-live-search-style="begins" title="Choix">
                                                    {% if info_annonce.furniture == 'oui' %}
