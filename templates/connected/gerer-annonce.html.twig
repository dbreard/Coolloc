                                                    {% else %}
                                                        <option value="non">Non</option>
                                                    {% endif %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div>
                                                    {% if error.garden is defined %}
                                                        <span class="red">{{ error.garden }}</span>
                                                    {% endif %}
                                                </div>
