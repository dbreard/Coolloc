{% extends"layout-class-nojs.html.twig" %}



{% block headTitle %}
    Ajouter une colocation | CoolLoc, la colocation cool !
{% endblock %}

{# Bloc nav #}

{% block navigation %}
    {% include 'required/navigation_nc.html.twig' ignore missing  %}
    {# modif de la nav #}
{% endblock %}
{% block content %}
<hr class="">
<div class="container target">
    <div class="row">
      <div class="col-sm-10">
    <h1 class="">Bonjour {% if profilInfo is defined %}{{ profilInfo.Prénom }}{% else %}Ma bite{% endif %}</h1>
          <div class="buttons col-sm-12">
            <button type="button" class="btn btn-default col-xs-12 col-sm-4">Modifier mes préférences</button>
            <button type="button" class="btn btn-default col-xs-12 col-sm-4">Modifier mes annonces</button>
          </div>
          <br>
      </div>
      <div class="col-sm-2">
        <img title="profile image" class="img-circle img-responsive col-xs-12" src="http://www.rlsandbox.com/img/profile.jpg">
        <button type="button" class="btn btn-default col-xs-12">Témoigner</button>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-3 col-xs-12">
            <!--left col-->
        <ul class="list-group">
          <li class="list-group-item text-muted" contenteditable="false">Profil</li>
          <li class="list-group-item text-right"><span class="pull-left"><strong class="">Nom</strong></span>{% if profilInfo is defined %}{{ profilInfo.Nom }}{% endif %}</li>
          <li class="list-group-item text-right"><span class="pull-left"><strong class="">Prénom</strong></span>{% if profilInfo is defined %}{{ profilInfo.Prénom }}{% endif %}</li>
          <li class="list-group-item text-right"><span class="pull-left"><strong class="">E-mail</strong></span>{% if profilInfo is defined %}{{ profilInfo.Email }}{% endif %}</li>
          <li class="list-group-item text-right"><span class="pull-left"><strong class="">N° de telephone:</strong></span>{% if profilInfo is defined %}{{ profilInfo.Téléphone }}{% endif %}</li>
          <li class="list-group-item text-right"><span class="pull-left"><strong class="">Statut</strong></span>{% if profilInfo is defined %}{{ profilInfo.Statut }}{% endif %}</li>
        </ul>
        <button type="button" class="btn btn-default col-xs-12">Modifier mon Profil</button>
      </div>
        <!--/col-3-->
      <div class="col-sm-9 col-xs-12" style="" contenteditable="false">
        <div class="panel panel-default">
          <div class="panel-heading">Vos préférences</div>
          <div class="panel-body"> A loOOooOoOOong request in db by souksay for my description.</div>
        </div>
        <div class="panel panel-default target">
          <div class="panel-heading" contenteditable="false">Vos annonces publiées</div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-4">
                  <div class="thumbnail">
                    <img alt="300x200" src="">
                    <div class="caption">
                      <h3>Annonce 1</h3>
                      <p>Description de l'annonce 1</p>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="thumbnail">
                    <img alt="300x200" src="">
                    <div class="caption">
                      <h3>Annonce 2</h3>
                      <p>Description de l'annonce 2</p>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="thumbnail">
                    <img alt="300x200" src="">
                    <div class="caption">
                      <h3>Annonce 3</h3>
                      <p>Description de l'annonce 3</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <div id="push"></div>
    </div>
  <script src="/plugins/bootstrap-pager.js"></script>
</div>
{% endblock %}
